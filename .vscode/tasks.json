{
  "version": "2.0.0",
  "tasks": [   
    {
      "label": "Build All",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "--no-restore",
        "-p:AndroidSdkDirectory=${config:ANDROID_SDK_ROOT}",
        "-p:JavaSdkDirectory=${config:JAVA_HOME}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      }
    },    
    {
      "label": "Build DesktopGL",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/DesktopGL/DesktopGL.csproj",
        "--no-restore"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Build Android",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/Android/Android.csproj",
        "--no-restore",
        "-p:AndroidSdkDirectory=${config:ANDROID_SDK_ROOT}",
        "-p:JavaSdkDirectory=${config:JAVA_HOME}"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Publish Windows",
      "type": "shell",
      "command": "dotnet",
      "args": [
          "publish",
          "-c",
          "Release",
          "-r",
          "win-x64",
          "/p:PublishReadyToRun=false",
          "/p:TieredCompilation=false",
          "--self-contained",
          "${workspaceFolder}/DesktopGL/DesktopGL.csproj"
      ],
      "problemMatcher": "$msCompile"
  },
  {
      "label": "Publish Linux",
      "type": "shell",
      "command": "dotnet",
      "args": [
          "publish",
          "-c",
          "Release",
          "-r",
          "linux-x64",
          "/p:PublishReadyToRun=false",
          "/p:TieredCompilation=false",
          "--self-contained",
          "${workspaceFolder}/DesktopGL/DesktopGL.csproj"
      ],
      "problemMatcher": "$msCompile"
  },
  {
      "label": "Publish MacOS",
      "type": "shell",
      "command": "dotnet",
      "args": [
          "publish",
          "-c",
          "Release",
          "-r",
          "osx-x64",
          "/p:PublishReadyToRun=false",
          "/p:TieredCompilation=false",
          "--self-contained",
          "${workspaceFolder}/DesktopGL/DesktopGL.csproj"
      ],
      "problemMatcher": "$msCompile"
  },
  ]
}