{
  "version": "2.0.0",
  "tasks": [   
    {
      "label": "Build All",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "--no-restore",
        "-p:AndroidSdkDirectory=${config:ANDROID_SDK_ROOT}",
        "-p:JavaSdkDirectory=${config:JAVA_HOME}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Publish All",
      "type": "shell",
      "command": "dotnet publish",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Build Library",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "./Library/Library.csproj",
        "--no-restore"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Build DesktopGL",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "./DesktopGL/DesktopGL.csproj",
        "--no-restore"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Build Android",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "./Android/Android.csproj",
        "--no-restore",
        "-p:AndroidSdkDirectory=${config:ANDROID_SDK_ROOT}",
        "-p:JavaSdkDirectory=${config:JAVA_HOME}"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always"
      }
    },
  ]
}